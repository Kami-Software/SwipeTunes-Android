<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gölge Katmanı -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#03000000" /> <!-- Gölge rengi -->
            <corners android:radius="45dp" />
        </shape>
    </item>
    <!-- Button Katmanı -->
    <item android:bottom="4dp" android:right="2dp" android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1ED760" /> <!-- Button rengi -->
            <corners android:radius="45dp" />
        </shape>
    </item>
</layer-list>
